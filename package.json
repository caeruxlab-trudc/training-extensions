{
  "name": "vscode-extensions-demo",
  "type": "module",
  "version": "1.0.0",
  "description": "Demo về các VS Code extensions phổ biến",
  "main": "index.js",
  "scripts": {
    "lint": "eslint **/*.{js,ts} --ignore-pattern node_modules",
    "lint:fix": "eslint **/*.{js,ts} --fix --ignore-pattern node_modules",
    "lint:css": "stylelint assets/**/*.{css,scss}",
    "lint:css:fix": "stylelint assets/**/*.{css,scss} --fix",
    "format": "prettier --write **/*.{js,ts,html,json,md,css,scss} --ignore-path .gitignore",
    "format:check": "prettier --check **/*.{js,ts,html,json,md,css,scss} --ignore-path .gitignore",
    "serve": "live-server --port=8080 --open=index.html"
  },
  "keywords": [
    "vscode",
    "extensions",
    "demo",
    "typescript"
  ],
  "author": "Developer",
  "license": "MIT",
  "devDependencies": {
    "@types/lodash": "^4.17.20",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-vue": "^9.33.0",
    "live-server": "^1.2.2",
    "postcss-scss": "^4.0.0",
    "prettier": "^3.0.0",
    "stylelint": "^14.16.0",
    "stylelint-config-prettier": "^9.0.0",
    "stylelint-config-standard": "^29.0.0",
    "ts-node": "^10.0.0",
    "typescript": "^5.0.0",
    "vue": "^3.0.0",
    "vue-eslint-parser": "^10.2.0"
  },
  "dependencies": {
    "axios": "^1.0.0",
    "lodash": "^4.17.21"
  }
}
