{
  "name": "vscode-extensions-demo",
  "version": "1.0.0",
  "description": "Demo về các VS Code extensions phổ biến",
  "main": "index.js",
  "scripts": {
    "lint": "eslint src/**/*.{js,ts,vue}",
    "lint:fix": "eslint src/**/*.{js,ts,vue} --fix",
    "lint:css": "stylelint src/**/*.{css,scss}",
    "lint:css:fix": "stylelint src/**/*.{css,scss} --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write src/**/*.{js,ts,vue,json,md,css,scss}",
    "format:check": "prettier --check src/**/*.{js,ts,vue,json,md,css,scss}",
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "check-all": "npm run lint && npm run lint:css && npm run type-check && npm run format:check"
  },
  "keywords": [
    "vscode",
    "extensions",
    "demo",
    "typescript"
  ],
  "author": "Developer",
  "license": "MIT",
  "devDependencies": {
    "@types/lodash": "^4.17.20",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-vue": "^9.33.0",
    "postcss-scss": "^4.0.0",
    "prettier": "^3.0.0",
    "stylelint": "^14.16.0",
    "stylelint-config-prettier": "^9.0.0",
    "stylelint-config-standard": "^29.0.0",
    "ts-node": "^10.0.0",
    "typescript": "^5.0.0",
    "vue": "^3.0.0",
    "vue-eslint-parser": "^10.2.0"
  },
  "dependencies": {
    "axios": "^1.0.0",
    "lodash": "^4.17.21"
  }
}
